@article{annurev:/content/journals/10.1146/annurev.energy.30.050504.144212,
   author = "Ehrenfeld, Joan G. and Ravit, Beth and Elgersma, Kenneth",
   title = "FEEDBACK IN THE PLANT-SOIL SYSTEM", 
   journal= "Annual Review of Environment and Resources",
