@article{https://doi.org/10.1002/joc.6769,
author = {Sun, Lei and Lan, Yufeng},
title = {Statistical downscaling of daily temperature and precipitation over China using deep learning neural models: Localization and comparison with other methods},
journal = {International Journal of Climatology},
volume = {41},
number = {2},
pages = {1128-1147},
keywords = {China, convolutional neural network, intercomparison, statistical downscaling},
